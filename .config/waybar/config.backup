{
    "layer": "top",
    "position": "top",
    "height": 35,
    "spacing": 5,
    "reload_style_on_change": true,
    "modules-left": ["hyprland/workspaces","sway/workspaces","tray"],
    "modules-center": ["clock","idle_inhibitor"],
    "modules-right": ["pulseaudio", "backlight", "network", "battery"],
    
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate"
    },
    "sway/workspaces" : {
        "disable-scroll": true,
        "all-outputs": true,
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%a %b %d %H:%M}",
        "tooltip-format": "{calendar}",
        "calendar": {
            "format": {
                "today": "<span color='#ff5555'><b>{}</b></span>"
            }
        }
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "battery": {
        "interval": 2,
        "states": {
            "warning": 20,
            "critical": 10
        },
        "format": "{icon} {capacity}%",
        "format-charging": "󰂄 {capacity}%",
        "format-plugged": "󱘖 {capacity}%",
        "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        "tooltip": true,
        "tooltip-format":"{timeTo} ({power} W)" 
    },
    "network": {
        "interval": 1,
        "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
        "format-wifi": "{icon}  {essid}",
        "format-disconnected": "󰤮  No network",
        "tooltip": true,
        "tooltip-format": "{ipaddr}",
        "on-click": "alacritty -e nmtui"
    },
    "pulseaudio": {
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": "  {icon} {format_source}",
        "format-muted": "  {format_source}",
        "format-source": "",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
    "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
        "activated": " ",
        "deactivated": " "
        },
    }
}

